#include <stdio.h>

/* Define your function here */ 
double MilesToLaps(double userMiles){
   return userMiles/0.25;
}

int main(void) {

   /* Type your code here. Your code must call the function.  */
   double userMiles;
   scanf("%lf",&userMiles);
   
   printf("%0.2lf\n", MilesToLaps(userMiles));

   return 0;
}
